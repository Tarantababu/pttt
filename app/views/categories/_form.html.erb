<div class="container text-center mt-3">
    <div class = "row">
        <div class="col-12 mt-5 shadow justify-content-center">
            <span class="badge badge-primary">Add New Category</span>
            <%= image_tag('files.svg', :alt => "add pieces", size: "240x240") %>
            <span class="badge badge-light">Total: <%= current_user.categories.count %></span>
        </div>
    </div>
</div>

<div class="container py-5 mb5 mt-2 text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
        <%= form_with(model: @category, class: "card p-2 mt-3", local: true) do |f| %>
          <div class="input-group">
            <%= f.text_field :name, class: "form-control", placeholder: "New Category Name" %>
            <div class="input-group-append">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
    </div>
</div>
        
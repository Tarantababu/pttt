<%if !logged_in?%>
  <a href="<%= signup_path %>" class="d-block px-3 py-2 text-center text-bold text-white old-bv bg-secondary">It's a revolutionary app for Bookworms! <sup>Beta</sup></a>
<%end%>
<% if logged_in? %>
<header class="navbar navbar-expand navbar-dark bg-dark flex-column flex-md-row bd-navbar fixed-top ">
<% else %>
<header class="navbar navbar-expand navbar-dark bg-dark flex-column flex-md-row bd-navbar">
<% end %>
  <div class="navbar-nav-scroll">
    <ul class="navbar-nav bd-navbar-nav flex-row">
      <li class="nav-brand">
        <%= image_tag('reading_time.svg', :alt => "sign in", size: "30x30", class: "d-inline-block align-top") %>
      </li>
      <li>
        <a class="nav-link active" href="<%=root_path%>">PutTheThingsTogether <sup>Beta</sup></a>
      </li>
    </ul>
  </div>
  <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    <% if logged_in? %>
      <li class="nav-item dropdown">
        <a class="nav-item nav-link dropdown-toggle mr-md-2 active" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.username%><%= " - Admin" if current_user.admin? %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
          <%= link_to "Dashboard", user_path(current_user), class: "dropdown-item"%>
          <%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item"%>
          <%= link_to "Categories", categories_path, class: "dropdown-item"%>
          <% if current_user.admin?%>
            <%= link_to "Users", users_path, class: "dropdown-item"%>
          <%end%>
          <div class="dropdown-divider"></div>
            <%= link_to "Logout", logout_path, class: "dropdown-item", method: :delete%>
        </div>
      </li>
      <li>
        <%= gravatar_for(current_user,size:40)%>
      </li>
    <%else%>
      <li class="nav-item">
        <%= link_to "Signup", signup_path, class: "p-3 text-decoration-none text-light"%>
      </li>
      <li class="nav-item">
        <%= link_to "Login", login_path, class: "p-3 text-decoration-none text-light"%>
      </li>
    </ul>
  <% end %>
</header>  
<div class="row py-4 mt-5">
  <div class="col-md-6 order-md-1">
      <div class="my-3 p-3 bg-white rounded shadow-sm ml-2">
        <h6 class="border-bottom border-gray pb-2 mb-0"><strong><%= @piece.title %></strong> - in page <%= @piece.page_number %></h6>
        <div class="media text-muted pt-3">
          <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_171dfa2997c%20text%20%7B%20fill%3A%23e83e8c%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_171dfa2997c%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23e83e8c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.296875%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <strong class="d-block text-gray-dark"></strong>
            <%= @piece.description %>
          </p>
        </div>
        <small class="d-block text-right mt-3 text-center">
                <% if @piece.categories.any? %>
                  <p class="text-center mt-3"><%= render @piece.categories %> </p>
                <% end %>
                <% if logged_in? && (@piece.user == current_user || current_user.admin? ) %>
                    <%= link_to "Edit", edit_piece_path(@piece), class: "btn btn-outline-info" %>
                    <%= link_to "Delete", piece_path(@piece), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-outline-danger" %>
                <% end %>          
        </small>
      </div>
    </div>
  <div class="col-6 order-md-2">
      <% if @piece.related_pieces.any? %>
      <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Related Pieces</h6>
        <% @piece.related_pieces.each do |p| %>
        <div class="media text-muted pt-3">
          <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_171df8006f6%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_171df8006f6%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.296875%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <strong class="d-block text-gray-dark">@<%= p.title %></strong>
            <%= p.description %>
          </p>
        </div>
        <% end %>
        <small class="d-block text-right mt-3">
          <a href="<%= pieces_path %>">All Pieces</a>
        </small>
      </div>
    <% else %>
      <div class="row justify-content-center">
        <small class="d-block text-center mt-3">
          <%= link_to image_tag('empty_street.svg', :alt => "Add Related Pieces", size: "360x360") , edit_piece_path(@piece) %>
        </small>
      </div>
      <div class="row justify-content-center">
        <span class="badge badge-primary"><%= link_to "Add Related Pieces", edit_piece_path(@piece), class: "text-white"%></span>
      </div>
    <% end %>
    </div>
</div>